#define wgs gl_NumWorkGroups.x

LOCAL_SIZE_LAYOUT;

//int RTP(in uint groupID) { return groupID < 4 ? rayTypedCounterRead[groupID] : 0; };
void main() {
    //const uint wsize = uint(subgroupAdd(RTP(Lane_Idx))); // use subgroup for fast getting of all groups count
    const uint wsize = min(rayCounter, MAX_RAYS);
    const uint wcount = min(tiled(wsize, gl_WorkGroupSize.x), 1000000u);
    traverseState.cacheID = int(gl_GlobalInvocationID.x);

    [[unroll, dependency_length(4)]]
    for (uint w=0;w<wcount;w+=wgs) {
        SB_BARRIER
        const int it = int((w + gl_WorkGroupID.x) * gl_WorkGroupSize.x + gl_LocalInvocationID.x);
        bool overflow = it >= wsize; IFALL(overflow) break;

        // do BVH traversing 
        const int rayID = vtRayIdx(it); int hid = vtFetchHitIdc(rayID);
        traverseBvh2(!overflow, hid, rays[rayID].origin.xyz, rays[rayID].cdirect.xy);

        // planned multiple-hits support
        [[flatten]]
        if (!overflow) { // verify intersection
            const int triID = floatBitsToInt(primitiveState.lastIntersection.w)-1;
            if (hid < 0) hid = it;

#ifdef DMA_HIT
            #define hit hits[hid]
#else
            VtHitData hit;
#endif
            hit.rayID = rayID+1;
            hit.uvt = primitiveState.lastIntersection;
            hit.payloadID = 0;
            hit.attribID = 0;
#ifndef DMA_HIT
            hits[hid] = hit;
#endif

            // identify intersection
            [[flatten]]
            IF (triID >= 0) {
                hits[hid].attribID = vtVerifyClosestHit(hid, -1)+1;
            } else {
                const int rID = 0; 
                vtVerifyMissedHit(hid, rID);
            }
        }
    }

    LGROUP_BARRIER;
}
